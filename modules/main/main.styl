body
	background-image url("../images/background-lowres.jpg")
	background-size cover

.tint
	z-index -1
	height 100%
	width 100%
	position fixed
	overflow auto
	top 0px
	left 0px
	background rgba(0,0,0,0.5)

#midContainer
	position absolute
	width w = 100%
	height h = 30%
	top 45% - (h/2)
	left 50% - (w/2)

#botContainer
	margin-top: 5%

#containerName
	font-family 'Sanchez', serif
	font-size 6.25em
	font-size 6vw
	color #FDD000
	text-align center

#containerText
	font-family 'Sanchez', serif
	font-size 4.375em
	font-size 5vw
	color #FFF
	text-align center
	height: 105px

.footer
	position absolute
	bottom 0
	width 100%
	height 50px
	background rgba(0,0,0,0.75)

#footerText
	font-family 'Sanchez', serif
	color #FDD000

#footerContainer
	margin-top 10px
	text-align center

.footerHover
	background rgba(253,208,0,0.75)

.footerTextHover
	color black !important

.cursorExternalSites
	&:hover
		filter invert(100%)
	&:active
		filter invert(0%)

.fontExternalSites
	font-family 'Sanchez', cursive
	font-size 200%
	font-weight 600
	text-align center

.buttonExternalSites
	height 50px
	width 50px
	border-radius 50px
	border 1px solid #000

.highlighted
	background yellow
	color black