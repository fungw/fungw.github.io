html
    height 100%
    padding 0

body
    height 100%
    position relative
    padding 0

nav
    line-height 20%
    ul
        li
            a
                &:hover
                    background-color #E4E4E4 !important
                &:active
                    background-color #E4E4E4 !important
                &:visited
                    background-color #E4E4E4 !important

img
    width auto
    max-height 95%

a
    &:hover
        color black
        text-decoration none

.external_sites
    &:hover
        filter invert(100%)
    &:active
        filter invert(0%)

::-moz-selection
    color red
    background yellow

::selection
    color white
    background black

.sidebar
    left 10px !important
    height 100%
    background-color #E4E4E4
    color #000

.title-heading
    font-family 'Anton', sans-serif
    font-size 250%

.title-image
    text-align center
    height 100%

.title-date
    height 27.5%

.title-smallText
    font-family 'Amatic SC'
    font-size 18px
    color grey

.title-nav
    height 50%
    top 5%

.nav-items
    height 27.5px

.entry
    height 100%
    top 0%
    position relative

.entry_posts
    top 0%
    height 100%
    position relative
    background-color #E4E4E4
    color #000

.entry-content
    background-color #1B1B1B
    color #fff
    border-left 1px solid #E4E4E4
    height 100%

.padding-portrait
    padding-top 5%

.padding-landscape
    padding-top 7.5%

.entry-image-portrait
    margin-top 1.5%
    height 60%
    width 60%

.entry-image-landscape
    margin-top 0%
    height 60%
    width 60%

.entry-typed
    padding-top 27.5%
    top 0%
    height 80%

.details
    font-family 'Sanchez', cursive
    font-size 200%
    font-weight 600
    text-align center

.height-100
    height 100%

.nav
    font-size 18px
    font-family 'Open Sans Condensed', sans-serif
    text-align center
    height 50%
    top 40%

.nav-text
    color #757575
    font-size 15px
    &:hover
        color black
        background black

.button
    height 50px
    width 50px
    border-radius 50px
    border 1px solid #000

.centered
    text-align center

#personal_name
    margin-bottom 1%